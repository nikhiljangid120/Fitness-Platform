// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  image          String?
  height         Float?    // stored in cm
  weight         Float?    // stored in kg
  targetWeight   Float?    // stored in kg
  fitnessGoal    String?   // e.g., "WEIGHT_LOSS", "MUSCLE_GAIN"
  activityLevel  String?
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  progress       Progress[]
  completedWorkouts CompletedWorkout[]
  chatSessions   ChatSession[]
  workoutPlans   WorkoutPlan[]
  mealPlans      MealPlan[]
}

model WorkoutPlan {
  id        String   @id @default(cuid())
  userId    String
  planData  Json     // Stores the 7-day schedule as a JSON object
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MealPlan {
  id        String   @id @default(cuid())
  userId    String
  planData  Json     // JSON object with breakfast, lunch, dinner, snacks
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CompletedWorkout {
  id          String   @id @default(cuid())
  userId      String
  workoutId   String   // Reference to the static ID in our dataset
  title       String
  duration    Int      // in seconds
  calories    Int      // estimated burn
  completedAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Progress {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  weight    Float    // kg
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String    @id @default(cuid())
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String?   // Auto-generated summary

  messages  Message[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // "user" | "model"
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
